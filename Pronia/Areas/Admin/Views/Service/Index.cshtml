@using Pronia.Models;
@model IEnumerable<Service>
@{
    ViewData["Title"] = "Service page";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Services</h4>
                    <div class="table-responsive">
                        @if (ViewBag.Count < 3)
                        {
                            <a class="btn btn-primary" asp-action="Create">Create</a>

                        }
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var serviceItem in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/images/website-images/@serviceItem.Image" />
                                        </td>
                                        <td>@serviceItem.Name</td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@serviceItem.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@serviceItem.Id">Update</a>
                                            <a class="btn btn-danger @(ViewBag.Count == 1 ? "disabled" : "")" asp-action="Delete" asp-route-id="@serviceItem.Id">Delete</a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


